<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:ChronoGit.ViewModels"
             xmlns:m="using:ChronoGit.Models"
             x:Class="ChronoGit.Views.CommitDetailsView"
             x:DataType="vm:CommitCommandViewModel">

        <StackPanel Margin="10">
            <TextBlock Text="{Binding Message}" FontWeight="Bold" FontSize="20" Height="80"/>
            <TextBlock Text="{Binding FullAuthor}" />
            <TextBlock Text="{Binding FullDateTime}" />
            <ScrollViewer>
                <ItemsControl ItemsSource="{Binding CommitChanges}">
                </ItemsControl>
            </ScrollViewer>
        </StackPanel>

</UserControl>
